/* pages/edit-profile/edit-profile.wxSS */
.container {
  min-height: 100vh;
  background-color: #F8FAFC;
  padding: 32rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  margin-bottom: 48rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1E293B;
}

/* 表单组 */
.form-group {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required {
  color: #EF4444;
  margin-left: 8rpx;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  color: #1E293B;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366F1;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  font-size: 30rpx;
  color: #1E293B;
  border: 2rpx solid #E2E8F0;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #6366F1;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #94A3B8;
  margin-top: 12rpx;
}

/* 头像 */
.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #F1F5F9;
}

.avatar-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 0 0 80rpx 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-tip {
  font-size: 22rpx;
  color: #FFFFFF;
}

/* 提示 */
.tips {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FEF3C7;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tips text:last-child {
  font-size: 24rpx;
  color: #92400E;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.btn-cancel,
.btn-save {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.btn-cancel {
  background-color: #F1F5F9;
  color: #64748B;
}

.btn-save {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #FFFFFF;
}
