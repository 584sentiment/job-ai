/* pages/index/index.wxss */

.page-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  border-bottom: 1px solid var(--border);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
}

.page-title {
  font-size: 18px;
  font-weight: 600;
  color: var(--text-primary);
}

.avatar-icon {
  width: 32px;
  height: 32px;
  border-radius: 50%;
}

.main-content {
  padding: 16px;
  padding-bottom: 100px;
  width: 100%;
  box-sizing: border-box;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 16px;
  width: 100%;
  overflow: hidden;
}

/* AI卡片 */
.ai-card {
  background: var(--ai-bg-subtle);
  border-left: 4px solid var(--ai-secondary);
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(139, 92, 246, 0.1);
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}

.ai-icon {
  font-size: 24px;
  margin-right: 8px;
}

.ai-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
}

.ai-content {
  margin-bottom: 12px;
}

.ai-text {
  font-size: 14px;
  color: var(--text-secondary);
}

.ai-highlight {
  color: var(--ai-primary);
  font-weight: 600;
}

.ai-stats {
  display: flex;
  align-items: center;
}

.ai-stat-icon {
  font-size: 14px;
  margin-right: 4px;
}

.ai-stat-text {
  font-size: 12px;
  color: var(--text-secondary);
}

/* 筛选标签 */
.filter-tags {
  display: flex;
  white-space: nowrap;
  margin-bottom: 16px;
  overflow-x: auto;
  height: 36px;
}

.filter-tag {
  flex-shrink: 0;
  padding: 6px 16px;
  border-radius: 16px;
  font-size: 13px;
  background: #F3F4F6;
  color: #6B7280;
  border: 1px solid transparent;
  margin-right: 8px;
  transition: all 0.2s;
  height: 20px;
}

.filter-tag.active {
  background: #EEF2FF;
  color: var(--ai-primary);
  border-color: #C7D2FE;
}

/* 岗位卡片 */
.job-card {
  margin-bottom: 12px;
}

.job-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12px;
}

.company-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.company-logo {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  font-weight: 600;
  color: #fff;
  margin-right: 12px;
}

.company-details {
  display: flex;
  flex-direction: column;
}

.company-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4px;
}

.position-name {
  font-size: 13px;
  color: var(--text-secondary);
}

.status-badge {
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 500;
  flex-shrink: 0;
}

.status-pending {
  background: var(--status-pending-bg);
  color: var(--status-pending-text);
}

.status-applied {
  background: var(--status-applied-bg);
  color: var(--status-applied-text);
}

.status-interview,
.status-interview1,
.status-interview2,
.status-interview3,
.status-final {
  background: var(--status-interview-bg);
  color: var(--status-interview-text);
}

.status-offered {
  background: var(--status-offered-bg);
  color: var(--status-offered-text);
}

.status-rejected {
  background: var(--status-rejected-bg);
  color: var(--status-rejected-text);
}

.job-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  margin-bottom: 12px;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: var(--text-secondary);
}

.meta-icon {
  width: 14px;
  height: 14px;
  margin-right: 4px;
}

.job-progress {
  padding-top: 12px;
  border-top: 1px solid var(--border);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.progress-label {
  font-size: 12px;
  color: var(--text-secondary);
}

.progress-value {
  font-size: 12px;
  font-weight: 600;
  color: var(--ai-primary);
}

.progress-bar {
  width: 100%;
  height: 6px;
  background: #E5E7EB;
  border-radius: 3px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--ai-gradient);
  transition: width 0.3s;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60px 24px;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 16px;
}

.empty-text {
  display: block;
  font-size: 15px;
  color: var(--text-secondary);
  margin-bottom: 8px;
}

.empty-hint {
  display: block;
  font-size: 13px;
  color: #9CA3AF;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 20px 0;
}

.loading-text {
  font-size: 13px;
  color: var(--text-secondary);
}
