/* pages/add-job/add-job.wxss */

/* 复制模式提示 */
.copy-tip {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #FEF3C7 0%, #FDE68A 100%);
  border-radius: 12rpx;
  margin: 16rpx;
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.tip-text {
  flex: 1;
  font-size: 24rpx;
  color: #92400E;
  line-height: 1.5;
}

/* 录入模式切换 */
.mode-switch {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  margin: 16rpx;
}

.switch-label {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

.switch-options {
  display: flex;
  gap: 16rpx;
}

.switch-option {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background-color: #F1F5F9;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.switch-option.active {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
}

.option-icon {
  font-size: 28rpx;
}

.option-text {
  font-size: 26rpx;
  color: #64748B;
}

.switch-option.active .option-text {
  color: #FFFFFF;
  font-weight: 500;
}

.main-content {
  height: calc(100vh - 12px - env(safe-area-inset-bottom));
  padding: 16px;
  padding-bottom: 80px;
  box-sizing: border-box;
  overflow-y: auto;
}

.form-section {
  margin-bottom: 16px;
}

.section-title {
  font-size: 15px;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16px;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16px;
}

.ai-parse-btn {
  display: inline-flex;
  margin: 0;
  align-items: center;
  padding: 6px 12px;
  background: var(--ai-gradient);
  color: #fff;
  border-radius: 8px;
  font-size: 13px;
  border: none;
}

.ai-parse-btn text {
  margin: 0 2px;
}

.form-group {
  margin-bottom: 16px;
}

.form-label {
  display: block;
  margin-bottom: 8px;
  font-size: 14px;
  font-weight: 500;
  color: #374151;
}

.form-label.required::after {
  content: '*';
  color: #EF4444;
  margin-left: 4px;
}

.form-input,
.form-picker,
.form-textarea {
  width: 100%;
  height: 48px;
  padding: 0 12px;
  border: 1px solid #D1D5DB;
  border-radius: 8px;
  font-size: 15px;
  background: #fff;
  box-sizing: border-box;
}

.form-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-value {
  color: var(--text-primary);
}

.form-textarea {
  min-height: 120px;
  resize: vertical;
}

.form-hint {
  display: flex;
  align-items: center;
  margin-top: 8px;
  font-size: 12px;
  color: var(--text-secondary);
}

.form-hint text {
  margin-right: 4px;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-top: 1px solid var(--border);
  padding: 12px 16px;
  display: flex;
  gap: 12px;
  padding-bottom: calc(12px + env(safe-area-inset-bottom));
}

.btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px;
  border-radius: 12px;
  font-size: 15px;
  font-weight: 500;
  border: none;
}

.btn-primary {
  background: var(--ai-gradient);
  color: #fff;
}

.btn-secondary {
  background: #F3F4F6;
  color: #374151;
  border: 1px solid #D1D5DB;
}
